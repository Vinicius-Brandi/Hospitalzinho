@page
@model HospitalzinhoSistema.Pages.Paciente.CadastroModel
@{
    ViewData["Title"] = "Cadastro Paciente";
}

@section Styles {
    <link rel="stylesheet" href="~/css/CadastroPaciente.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    
    <style>
        /* Adicione este estilo para as mensagens de validação */
        .field-validation-error {
            color: #b94a48;
            font-size: 0.9em;
        }
    </style>
}

<div id="area-de-trabalho">

    <div id="paciente-nao-encontrado">
        <section id="cadastro-novo-paciente">
            <h2>Cadastro de Novo Paciente</h2>
            <form method="post">
                <fieldset>
                    <legend>Dados Pessoais</legend>
                    <div class="form-grid">
                        <div class="form-group full-width">
                            <label asp-for="Paciente.Nome">Nome Completo</label>
                            <input asp-for="Paciente.Nome">
                            <span asp-validation-for="Paciente.Nome"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.DataNascimento">Data de Nascimento</label>
                            <input asp-for="Paciente.DataNascimento">
                            <span asp-validation-for="Paciente.DataNascimento"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.CPF">CPF</label>
                            <input asp-for="Paciente.CPF">
                            <span asp-validation-for="Paciente.CPF"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.CNS">CNS</label>
                            <input asp-for="Paciente.CNS">
                            <span asp-validation-for="Paciente.CNS"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.Genero"></label>
                            <select asp-for="Paciente.Genero" asp-items="Html.GetEnumSelectList<HospitalzinhoSistema.Models.Paciente.PacienteGenero>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="Paciente.Genero"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.Etinia">Raça/Cor</label>
                            <select asp-for="Paciente.Etinia" asp-items="Html.GetEnumSelectList<HospitalzinhoSistema.Models.Paciente.PacienteEtinia>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="Paciente.Etinia"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.Nacionalidade"></label>
                            <input asp-for="Paciente.Nacionalidade" value="Brasileira">
                            <span asp-validation-for="Paciente.Nacionalidade"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.Naturalidade">Naturalidade (Cidade de Nascimento)</label>
                            <input asp-for="Paciente.Naturalidade" placeholder="Ex: Marília - SP">
                            <span asp-validation-for="Paciente.Naturalidade"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.Escolaridade"></label>
                            <select asp-for="Paciente.Escolaridade" asp-items="Html.GetEnumSelectList<HospitalzinhoSistema.Models.Paciente.PacienteEscolaridade>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="Paciente.Escolaridade"></span>
                        </div>
                        <div class="form-group full-width">
                            <label asp-for="Paciente.NomeMae">Nome Completo da Mãe</label>
                            <input asp-for="Paciente.NomeMae">
                            <span asp-validation-for="Paciente.NomeMae"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.CPFMae">CPF da Mãe</label>
                            <input asp-for="Paciente.CPFMae" placeholder="000.000.000-00">
                            <span asp-validation-for="Paciente.CPFMae"></span>
                        </div>
                        <div class="form-group full-width">
                            <label asp-for="Paciente.NomePai">Nome Completo do Pai</label>
                            <input asp-for="Paciente.NomePai">
                            <span asp-validation-for="Paciente.NomePai"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.CPFPai">CPF do Pai</label>
                            <input asp-for="Paciente.CPFPai" placeholder="000.000.000-00">
                            <span asp-validation-for="Paciente.CPFPai"></span>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Endereço</legend>
                    <div class="address-grid">
                        <div class="form-group">
                            <label asp-for="Paciente.Endereco.CEP">CEP</label>
                            <input asp-for="Paciente.Endereco.CEP" placeholder="00000-000">
                            <span asp-validation-for="Paciente.Endereco.CEP"></span>
                        </div>
                        <div class="form-group full-width">
                            <label asp-for="Paciente.Endereco.Logradouro"></label>
                            <input asp-for="Paciente.Endereco.Logradouro">
                            <span asp-validation-for="Paciente.Endereco.Logradouro"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.Endereco.Numero"></label>
                            <input asp-for="Paciente.Endereco.Numero">
                            <span asp-validation-for="Paciente.Endereco.Numero"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.Endereco.Complemento"></label>
                            <input asp-for="Paciente.Endereco.Complemento" placeholder="Ex: Apto 101">
                            <span asp-validation-for="Paciente.Endereco.Complemento"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.Endereco.Bairro"></label>
                            <input asp-for="Paciente.Endereco.Bairro">
                            <span asp-validation-for="Paciente.Endereco.Bairro"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.Endereco.Cidade"></label>
                            <input asp-for="Paciente.Endereco.Cidade">
                            <span asp-validation-for="Paciente.Endereco.Cidade"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.Endereco.Estado"></label>
                            <input asp-for="Paciente.Endereco.Estado">
                            <span asp-validation-for="Paciente.Endereco.Estado"></span>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Contato</legend>
                    <div class="form-grid">
                        <div class="form-group">
                            <label asp-for="Paciente.Contato.TelefoneResidencial">Telefone Residencial</label>
                            <input asp-for="Paciente.Contato.TelefoneResidencial" placeholder="(00) 0000-0000">
                            <span asp-validation-for="Paciente.Contato.TelefoneResidencial"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paciente.Contato.TelefoneCelular">Telefone Celular</label>
                            <input asp-for="Paciente.Contato.TelefoneCelular" placeholder="(00) 00000-0000">
                            <span asp-validation-for="Paciente.Contato.TelefoneCelular"></span>
                        </div>
                        <div class="form-group full-width">
                            <label asp-for="Paciente.Contato.Email"></label>
                            <input asp-for="Paciente.Contato.Email" placeholder="exemplo@email.com">
                            <span asp-validation-for="Paciente.Contato.Email"></span>
                        </div>
                    </div>
                </fieldset>
                <div class="botoes-form">
                    <button type="submit" class="btn-salvar">Salvar Novo Paciente</button>
                </div>
            </form>
        </section>

    </div>

</div> 