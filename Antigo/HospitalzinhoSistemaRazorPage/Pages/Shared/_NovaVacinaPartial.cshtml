@using HospitalzinhoSistema.Models.Prontuario
@model ProntuarioVacinaDTO

<fieldset id="form-nova-vacina">
    <!--class="hidden"-->
    <legend>Dados da Vacina</legend>
    <div class="form-grid">
        <div class="form-group">
            <label for="nome-vacina">Nome da Vacina</label>
            <input type="text" id="nome-vacina" asp-for="Nome">
        </div>
        <div class="form-group">
            <label for="dose-vacina">Dose</label>
            <input type="text" id="dose-vacina" asp-for="Dose" placeholder="Ex: 1ª Dose, Dose Única">
        </div>
        <div class="form-group">
            <label for="data-vacina">Data de Aplicação</label>
            <input type="date" id="data-vacina" asp-for="DataAplicacao">
        </div>
    </div>
</fieldset> 