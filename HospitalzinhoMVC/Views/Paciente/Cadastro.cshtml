@model HospitalzinhoMVC.Models.BrandiAPI.Paciente

@{
    // PASSO 1: Diz que esta página deve usar o _Layout.cshtml como base.
    Layout = "_Layout";
    ViewData["Title"] = "Cadastro Paciente";
}

@section Styles {
    <link rel="stylesheet" href="~/css/CadastroPaciente.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    
    <style>
        /* Adicione este estilo para as mensagens de validação */
        .field-validation-error {
            color: #b94a48;
            font-size: 0.9em;
        }
    </style>
}

<h1>Cadastro de Paciente</h1>
<div id="area-de-trabalho">

    <div id="paciente-nao-encontrado">
        <div class="alerta">
            <p>Nenhum paciente encontrado com o documento informado.</p>
            <button id="btn-mostrar-cadastro" class="btn-cadastrar-novo">Cadastrar Novo Paciente</button>
        </div>

        <section id="cadastro-novo-paciente">
            <h2>Cadastro de Novo Paciente</h2>
            <form action="/Paciente/Cadastro" method="post">
                <fieldset>
                    <legend>Dados Pessoais</legend>
                    <div class="form-grid">
                        <div class="form-group full-width">
                            <label asp-for="Nome">Nome Completo</label>
                            <input asp-for="Nome">
                            <span asp-validation-for="Nome"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataNascimento">Data de Nascimento</label>
                            <input asp-for="DataNascimento">
                            <span asp-validation-for="DataNascimento"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cpf">CPF</label>
                            <input asp-for="Cpf">
                            <span asp-validation-for="Cpf"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CNS">CNS</label>
                            <input asp-for="CNS">
                            <span asp-validation-for="CNS"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sexo"></label>
                            <select asp-for="Sexo" asp-items="Html.GetEnumSelectList<HospitalzinhoMVC.Models.BrandiAPI.SexoPaciente>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="Sexo"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Raca">Raça/Cor</label>
                            <select asp-for="Raca" asp-items="Html.GetEnumSelectList<HospitalzinhoMVC.Models.BrandiAPI.RacaPaciente>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="Raca"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nacionalidade"></label>
                            <input asp-for="Nacionalidade" value="Brasileira">
                            <span asp-validation-for="Nacionalidade"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Naturalidade">Naturalidade (Cidade de Nascimento)</label>
                            <input asp-for="Naturalidade" placeholder="Ex: Marília - SP">
                            <span asp-validation-for="Naturalidade"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Escolaridade"></label>
                            <select asp-for="Escolaridade" asp-items="Html.GetEnumSelectList<HospitalzinhoMVC.Models.BrandiAPI.EscolaridadePaciente>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="Escolaridade"></span>
                        </div>
                        <div class="form-group full-width">
                            <label asp-for="NomeMae">Nome Completo da Mãe</label>
                            <input asp-for="NomeMae">
                            <span asp-validation-for="NomeMae"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CpfMae">CPF da Mãe</label>
                            <input asp-for="CpfMae" placeholder="000.000.000-00">
                            <span asp-validation-for="CpfMae"></span>
                        </div>
                        <div class="form-group full-width">
                            <label asp-for="NomePai">Nome Completo do Pai</label>
                            <input asp-for="NomePai">
                            <span asp-validation-for="NomePai"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CpfPai">CPF do Pai</label>
                            <input asp-for="CpfPai" placeholder="000.000.000-00">
                            <span asp-validation-for="CpfPai"></span>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Endereço</legend>
                    <div class="address-grid">
                        <div class="form-group">
                            <label asp-for="Endereco.Cep">CEP</label>
                            <input asp-for="Endereco.Cep" placeholder="00000-000">
                            <span asp-validation-for="Endereco.Cep"></span>
                        </div>
                        <div class="form-group full-width">
                            <label asp-for="Endereco.Logradouro"></label>
                            <input asp-for="Endereco.Logradouro">
                            <span asp-validation-for="Endereco.Logradouro"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Numero"></label>
                            <input asp-for="Endereco.Numero">
                            <span asp-validation-for="Endereco.Numero"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Complemento"></label>
                            <input asp-for="Endereco.Complemento" placeholder="Ex: Apto 101">
                            <span asp-validation-for="Endereco.Complemento"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Bairro"></label>
                            <input asp-for="Endereco.Bairro">
                            <span asp-validation-for="Endereco.Bairro"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Cidade"></label>
                            <input asp-for="Endereco.Cidade">
                            <span asp-validation-for="Endereco.Cidade"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Estado"></label>
                            <input asp-for="Endereco.Estado">
                            <span asp-validation-for="Endereco.Estado"></span>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Contato</legend>
                    <div class="form-grid">
                        <div class="form-group">
                            <label asp-for="Contato.TelefoneResidencial">Telefone Residencial</label>
                            <input asp-for="Contato.TelefoneResidencial" placeholder="(00) 0000-0000">
                            <span asp-validation-for="Contato.TelefoneResidencial"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Contato.TelefoneCelular">Telefone Celular</label>
                            <input asp-for="Contato.TelefoneCelular" placeholder="(00) 00000-0000">
                            <span asp-validation-for="Contato.TelefoneCelular"></span>
                        </div>
                        <div class="form-group full-width">
                            <label asp-for="Contato.Email"></label>
                            <input asp-for="Contato.Email" placeholder="exemplo@email.com">
                            <span asp-validation-for="Contato.Email"></span>
                        </div>
                    </div>
                </fieldset>
                <div class="botoes-form">
                    <button type="submit" class="btn-salvar">Salvar Novo Paciente</button>
                </div>
            </form>
        </section>

    </div>

</div> 