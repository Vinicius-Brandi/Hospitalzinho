<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Hospitalzinho"
                   namespace="Hospitalzinho.Entidades">

	<class name="Leito" table="leito" lazy="false">

		<!-- ID com sequence -->
		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">seq_leito</param>
			</generator>
		</id>

		<!-- Propriedades -->
		<property name="Numero" column="numero" not-null="true" type="string"/>
		<property name="Ocupado" column="ocupado" type="boolean"/>
		
		<property name="QuartoId" column="quarto_id" not-null="true" type="long"/>
		<many-to-one name="Quarto" class="Quarto" column="quarto_id" not-null="true" insert="false" update="false"/>

		<property name="HospitalId" column="hospital_unidade_id" not-null="true" />

		<!-- Relacionamento reverso com Internações -->
		<bag name="Internacoes" table="paciente_internacao" inverse="true" cascade="none" lazy="true">
			<key column="leito_id"/>
			<one-to-many class="PacienteInternacao"/>
		</bag>

	</class>
</hibernate-mapping>
