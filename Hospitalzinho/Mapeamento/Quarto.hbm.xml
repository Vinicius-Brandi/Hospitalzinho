<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Hospitalzinho"
                   namespace="Hospitalzinho.Entidades">

	<class name="Quarto" table="quarto" lazy="false">
		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">seq_quarto</param>
			</generator>
		</id>

		<property name="Numero" column="numero" type="string" />
		<property name="Tipo" column="tipo" type="int" />
		<property name="Capacidade" column="capacidade" type="int" />
		<property name="CriadoEm" column="data_cadastro" not-null="true" />
		<property name="UltimaAlteracao" column="data_atualizacao" not-null="true" />

		<many-to-one name="Ala" class="Ala" column="ala_id" not-null="true" />

		<!-- Internações vêm da tabela paciente_internacao -->
		<bag name="Internacoes" table="paciente_internacao" inverse="true" cascade="all-delete-orphan">
			<key column="quarto_id"/>
			<one-to-many class="PacienteInternacao"/>
		</bag>

		<!-- Leitos vêm da tabela leito -->
		<bag name="Leitos" table="leito" inverse="true" cascade="all-delete-orphan">
			<key column="quarto_id" />
			<one-to-many class="Leito" />
		</bag>

	</class>
</hibernate-mapping>
