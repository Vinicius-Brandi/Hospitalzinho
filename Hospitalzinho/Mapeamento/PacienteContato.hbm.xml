<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Hospitalzinho"
                   namespace="Hospitalzinho.Entidades">

	<class name="PacienteContato" table="paciente_contato" lazy="false">

		<!-- ID com sequence -->
		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">seq_paciente_contato</param>
			</generator>
		</id>

		<!-- Coluna para FK do paciente -->
		<property name="PacienteId" column="paciente_id" not-null="true" insert="false" update="false" />
		<many-to-one name="Paciente" column="paciente_id" class="Paciente" not-null="true" />

		<!-- Colunas simples -->
		<property name="TelefoneResidencial" column="telefone_residencial" />
		<property name="TelefoneCelular" column="telefone_celular" />
		<property name="Email" column="email" />
		<property name="CriadoEm" column="data_cadastro" not-null="true" />
		<property name="UltimaAlteracao" column="data_atualizacao" not-null="true" />

	</class>
</hibernate-mapping>
