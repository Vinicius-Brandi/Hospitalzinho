<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Hospitalzinho"
                   namespace="Hospitalzinho.Entidades.Medicacao">

	<class name="MedicamentoModelo" table="medicamento_modelo" lazy="false">

		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">seq_medicamento_modelo</param>
			</generator>
		</id>

		<property name="Nome" column="nome" type="string" not-null="true" />
		<property name="PrincipioAtivo" column="principio_ativo" type="string" />
		<property name="Fabricante" column="fabricante" type="string" />
		<property name="FormaFarmaceutica" column="forma_farmaceutica" type="string" />
		<property name="Dosagem" column="dosagem" type="string" />
		<property name="Indicacoes" column="indicacoes" type="string" />
		<property name="ContraIndicacoes" column="contra_indicacoes" type="string" />

	</class>
</hibernate-mapping>
