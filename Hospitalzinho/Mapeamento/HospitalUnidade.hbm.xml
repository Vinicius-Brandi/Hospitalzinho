<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Hospitalzinho" namespace="Hospitalzinho.Entidades.EspecificaçõesHospital">
	<class name="HospitalUnidade" table="hospital_unidade" lazy="false">
		<id name="Id" column="id" type="Int64">
			<generator class="sequence">
				<param name="sequence">seq_hospital_unidade</param>
			</generator>
		</id>

		<property name="Nome" column="nome" not-null="true"/>
		<property name="TipoUnidade" column="tipo_unidade" type="Int32"/>

		<many-to-one name="Endereco" column="endereco_id" class="HospitalEndereco" cascade="none" not-null="false"/>
		<many-to-one name="InstituicaoPai" column="instituicao_pai_id" class="Hospital" not-null="true"/>

		<bag name="Alas" inverse="true" cascade="all-delete-orphan">
			<key column="hospital_unidade_id"/>
			<one-to-many class="Ala"/>
		</bag>

		<bag name="ProfissionaisSaude" inverse="true" cascade="all-delete-orphan">
			<key column="hospital_unidade_id"/>
			<one-to-many class="ProfissionalSaude"/>
		</bag>

		<bag name="Convenios" table="hospital_unidade_convenio" cascade="none">
			<key column="hospital_unidade_id"/>
			<many-to-many class="Convenio" column="convenio_id"/>
		</bag>

		<bag name="PacientesCirurgia" inverse="true" cascade="none">
			<key column="hospital_unidade_id"/>
			<one-to-many class="PacienteCirurgia"/>
		</bag>

		<bag name="PacienteExames" inverse="true" cascade="none">
			<key column="hospital_unidade_id"/>
			<one-to-many class="PacienteExame"/>
		</bag>

		<bag name="PacientesInternacao" inverse="true" cascade="none">
			<key column="hospital_unidade_id"/>
			<one-to-many class="PacienteInternacao"/>
		</bag>

		<bag name="PacientesConsulta" inverse="true" cascade="none">
			<key column="hospital_unidade_id"/>
			<one-to-many class="PacienteConsulta"/>
		</bag>

		<bag name="PacientesVacinacao" inverse="true" cascade="none">
			<key column="hospital_unidade_id"/>
			<one-to-many class="PacienteVacinacao"/>
		</bag>

		<bag name="Receitas" inverse="true" cascade="none">
			<key column="hospital_unidade_id"/>
			<one-to-many class="Receita"/>
		</bag>

	</class>
</hibernate-mapping>
