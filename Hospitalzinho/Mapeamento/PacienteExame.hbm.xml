<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Hospitalzinho"
                   namespace="Hospitalzinho.Entidades.PacientePasta">

	<class name="PacienteExame" table="paciente_exame" lazy="false">

		<!-- ID com sequence -->
		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">seq_paciente_exame</param>
			</generator>
		</id>

		<!-- Relacionamentos obrigatÃ³rios -->
		<many-to-one name="Prontuario" class="PacienteProntuario" column="prontuario_id" not-null="true" />
		<many-to-one name="tipoExame" class="Exame" column="tipo_exame_id" not-null="true" />
		<many-to-one name="ProfResponsavel" class="ProfissionalSaude" column="profissional_id" not-null="true" />
		<many-to-one name="Hospital" class="HospitalUnidade" column="hospital_unidade_id" not-null="true" />

		<!-- Propriedades -->
		<property name="DataExame" column="data_exame" type="datetime" />
		<property name="Laboratorio" column="laboratorio" type="string" />
		<property name="Resultados" column="resultados" type="string" />
		<property name="Observacoes" column="observacoes" type="string" />
		<property name="CriadoEm" column="data_cadastro" not-null="true" />
		<property name="UltimaAlteracao" column="data_atualizacao" not-null="true" />

	</class>
</hibernate-mapping>
