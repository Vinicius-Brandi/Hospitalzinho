<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Hospitalzinho"
                   namespace="Hospitalzinho.Entidades">

	<class name="PacienteEndereco" table="paciente_endereco" lazy="false">

		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">seq_paciente_endereco</param>
			</generator>
		</id>

		<!-- Coluna para FK do paciente -->
		<property name="PacienteId" column="paciente_id" not-null="true" insert="false" update="false" />
		<many-to-one name="Paciente" column="paciente_id" class="Paciente" not-null="true" />

		<property name="Logradouro" column="logradouro"/>
		<property name="Numero" column="numero"/>
		<property name="Complemento" column="complemento"/>
		<property name="Bairro" column="bairro"/>
		<property name="Cidade" column="cidade"/>
		<property name="Estado" column="estado"/>
		<property name="Cep" column="cep"/>

		<property name="CriadoEm" column="data_cadastro" not-null="true" />
		<property name="UltimaAlteracao" column="data_atualizacao" not-null="true" />

	</class>
</hibernate-mapping>
