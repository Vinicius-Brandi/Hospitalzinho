<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Hospitalzinho"
                   namespace="Hospitalzinho.Entidades">

	<class name="PacienteProntuario" table="paciente_prontuario" lazy="false">

		<!-- ID com sequence -->
		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">seq_prontuario</param>
			</generator>
		</id>

		<!-- Relacionamento com Paciente -->
		<many-to-one name="Paciente" class="Paciente" column="paciente_id" unique="true" not-null="true" />

		<!-- Colunas simples -->
		<property name="TipoSangue" column="tipo_sangue" type="int" not-null="true" />
		<property name="DataAbertura" column="data_abertura" />
		<property name="UltimaAtualizacao" column="ultima_atualizacao" />
		<property name="CriadoEm" column="data_cadastro" not-null="true" />
		<property name="UltimaAlteracao" column="data_atualizacao" not-null="true" />

		<!-- Relacionamentos 1:N -->
		<bag name="PacienteAlergias" cascade="all-delete-orphan" inverse="true">
			<key column="prontuario_id"/>
			<one-to-many class="PacienteAlergia"/>
		</bag>

		<bag name="DoencasCronicas" cascade="all-delete-orphan" inverse="true">
			<key column="prontuario_id"/>
			<one-to-many class="PacienteDoencaCronica"/>
		</bag>

		<bag name="MedicacoesContinuas" cascade="all-delete-orphan" inverse="true">
			<key column="prontuario_id"/>
			<one-to-many class="PacienteMedicacao"/>
		</bag>

		<bag name="Cirurgias" cascade="all-delete-orphan" inverse="true">
			<key column="prontuario_id"/>
			<one-to-many class="PacienteCirurgia"/>
		</bag>

		<bag name="Vacinacoes" cascade="all-delete-orphan" inverse="true">
			<key column="prontuario_id"/>
			<one-to-many class="PacienteVacinacao"/>
		</bag>

		<bag name="Consultas" cascade="all-delete-orphan" inverse="true">
			<key column="prontuario_id"/>
			<one-to-many class="PacienteConsulta"/>
		</bag>

		<bag name="Internacoes" cascade="all-delete-orphan" inverse="true">
			<key column="prontuario_id"/>
			<one-to-many class="PacienteInternacao"/>
		</bag>

		<bag name="Exames" cascade="all-delete-orphan" inverse="true">
			<key column="prontuario_id"/>
			<one-to-many class="PacienteExame"/>
		</bag>

	</class>
</hibernate-mapping>
