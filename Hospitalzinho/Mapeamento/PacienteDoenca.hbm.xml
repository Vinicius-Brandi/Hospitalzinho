<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Hospitalzinho"
                   namespace="Hospitalzinho.Entidades.PacientePasta">

	<class name="PacienteDoencaCronica" table="paciente_doenca_cronica" lazy="false">

		<!-- ID com sequence -->
		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">seq_paciente_doenca</param>
			</generator>
		</id>

		<!-- Relacionamentos obrigatórios -->
		<many-to-one name="Prontuario" class="PacienteProntuario" column="prontuario_id" not-null="true" />
		<many-to-one name="Modelo" class="DoencaCronicaModelo" column="doenca_modelo_id" not-null="true" />

		<!-- Propriedades -->
		<property name="DataDiagnostico" column="data_diagnostico" type="DateTime" />
		<property name="Estagio" column="estagio" type="string" />
		<property name="Observacoes" column="observacoes" type="string" />
		<property name="EmTratamento" column="em_tratamento" type="bool" not-null="true" />
		<property name="CriadoEm" column="data_cadastro" not-null="true" />
		<property name="UltimaAlteracao" column="data_atualizacao" not-null="true" />

	</class>
</hibernate-mapping>
